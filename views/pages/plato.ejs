<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>adminForm</title>
	<title>Categoria</title>
  	<% include ../partes/head %>
</head>
<body>
	<section class="container margenSup">

		<h1 class="text-center">PLATOS</h1>

		<div class="row table-responsive margenSupPeq">
			<table class="table table-hover table-condensed">
				<thead>
				<tr>
					<th>CODIGO</th>
					<th>NOMBRE</th>
					<th>ACCIONES</th>
				</tr>
				</thead>
				<tbody>
					
					<% if(plato.length){ 
                        
         				for(var i = 0;i < plato.length;i++) { %>
         
					        <tr>
					            
					            <td><%=plato[i].codigo%></td>
					            <td><%=plato[i].nombre%></td>
					            <td>
					                <a class="btn btn-primary" href="/ingrediente/<%=plato[i].codigo%>"><%=plato[i].nombre%></a>
					            </td>
					        </tr>
    					<% }
    
				     }else{ %>
				         <tr>
				            <td colspan="5">No Data</td>
				         </tr>
				    <% } %>

				</tbody>
			</table>
		</div>

	</section>
	<% include ../partes/footerScripts%>
</body>
</html>