<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Administrador</title>
	<title>Catalogo/Galeria</title>
  	<% include ../partes/head %>
</head>
<body>
	<section class="container margenSup">
		<div class="row table-responsive">
			<table class="table table-hover table-condensed">
				<thead>
				<tr>
					<th>CODIGO CATEGORIA</th>
					<th>NONMBRE CATEGORIA</th>
					<th>CODIGO PLATO</th>
					<th>NOMBRE</th>
					<th>ACCION</th>
				</tr>
				</thead>
				<tbody>
					
					<% if(plato.length){ 
                        
         				for(var i = 0;i < plato.length;i++) { %>
         
					        <tr>
					            <td><%=plato[i].codigo_categoria%></td>
					            <td><%=plato[i].nombre_categoria%></td>
					            <td><%=plato[i].codigo%></td>
					            <td><%=plato[i].nombre%></td>
					            <td>
					                <a class="" href="/borrarPlato/<%=plato[i].codigo%>">BORRAR</a>
					                <span>-</span>
					               	<a class="" href="/update/<%=plato[i].id%>">ACTUALIZAR</a>
					               	<span>-</span>
					               	<a class="" href="/administradorIngredientes/<%=plato[i].codigo%>">IR A INGREDIENTES</a>
					            </td>
					        </tr>
    					<% }
    
				     }else{ %>
				         <tr>
				            <td colspan="5">No Data</td>
				         </tr>
				    <% } %>

				</tbody>
			</table>
			
			<div class="col-md-4 col-md-offset-4">
				<a href="/guardarPlato" class="btn btn-info btn-block" style="margin-top: 5%;">CREAR PLATO</a>
				<a href="/" class="btn btn-warning btn-block" style="margin-top: 5%;">Atras</a>
			</div>

		</div>

	</section>
	<% include ../partes/footerScripts%>
</body>
</html>